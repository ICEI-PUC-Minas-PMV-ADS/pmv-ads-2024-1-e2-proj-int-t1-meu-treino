@model BackEndMeutreino.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<div class="text-center">

    <h1 class="display-4">Cadastrar Usuario</h1>

</div>
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="nome" class="control-label"></label>
        <input asp-for="nome" class="form-control" placeholder="Digite o nome do Usuário">
        <span asp-validation-for="nome" class="text-danger"></span>

        <div class="form-group">
            <label asp-for="email" class="control-label"></label>
            <input asp-for="email" class="form-control" placeholder="Digite o nome do Usuário">
            <span asp-validation-for="email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="senha" class="control-label"></label>
            <input asp-for="senha" class="form-control" placeholder="Digite o nome do Usuário">
            <span asp-validation-for="senha" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="role" class="control-label"></label>
            <input asp-for="role" class="form-control" placeholder="Digite o nome do Usuário">
            <span asp-validation-for="role" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="altura" class="control-label"></label>
            <input asp-for="altura" class="form-control" placeholder="Digite o nome do Usuário">
            <span asp-validation-for="altura" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="peso" class="control-label"></label>
            <input asp-for="peso" class="form-control" placeholder="Digite o nome do Usuário">
            <span asp-validation-for="peso" class="text-danger"></span>
        </div>
        <br />

        <button type="submit" class="btn btn-primary">Adicionar</button>
        <a class="btn btn-secondary btn-block" asp-controller="Usuarios" asp-action="Index" role="button">Voltar</a>
</form>
    </div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}