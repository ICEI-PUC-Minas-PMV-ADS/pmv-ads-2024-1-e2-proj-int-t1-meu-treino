@model BackEndMeutreino.Models.Usuario

@{
    ViewBag.Title = "Register";
}
@{
    Layout = null;
}

<style>
   
    .login-form {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 300px;
        padding: 20px;
        background-color: #f8f9fa; 
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); 
    }

        
        .login-form input[type="text"],
        .login-form input[type="password"] {
            width: 100%; 
            margin-bottom: 10px; 
            padding: 10px; 
            font-size: 16px;
            border: 1px solid #ccc; 
            border-radius: 5px;
            box-sizing: border-box; 
            font-family: Arial, sans-serif; 
        }

        .login-form button {
            width: 100%; 
            margin-bottom: 10px; 
            padding: 10px; 
            font-size: 16px; 
            border: none; 
            border-radius: 5px;
            background-color: #007bff; 
            color: #fff; 
            cursor: pointer;
            font-family: Arial, sans-serif; 
        }

            .login-form button:hover {
                background-color: #0056b3; 
            }

        
        .login-form a.btn-secondary {
            display: inline-block;
            width: calc(50% - 5px); 
            text-align: center;
            text-decoration: none;
            color: #007bff;
            background-color: transparent;
            border: 1px solid #007bff;
            border-radius: 5px;
            padding: 10px;
            margin-top: 10px;
            font-family: Arial, sans-serif;
        }

            .login-form a.btn-secondary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
                color: #fff;
            }
</style>

<div class="login-form">
    @using (Html.BeginForm("Register", "Usuario", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.nome, "Nome", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.email, "Email", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.senha, "Senha", htmlAttributes: new { @class = "control-label" })
            @Html.PasswordFor(model => model.senha, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.senha, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.altura, "Altura (CM)", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.altura, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.altura, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.peso, "Peso (KG)", htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.peso, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.peso, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
    }
</div>
<script src="/_framework/aspnetcore-browser-refresh.js"></script>
