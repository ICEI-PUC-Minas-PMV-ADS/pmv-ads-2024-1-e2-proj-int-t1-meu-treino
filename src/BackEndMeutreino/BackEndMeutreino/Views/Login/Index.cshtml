@model BackEndMeutreino.Models.Usuario

@{
    ViewBag.Title = "Login";
}

@{
    Layout = null;
}
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meu Treino</title>
    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/StyleSheet.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<title>Meu Treino</title>

<div class="login-form">
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.senha, htmlAttributes: new { @class = "control-label" })
        @Html.PasswordFor(model => model.senha, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.senha, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Entrar</button>
    }

    <a href="@Url.Action("Register", "Usuario")" class="btn btn-secondary">Cadastre-se</a>
</div>
<style>
    /* Estilo para centralizar o formulário */
    .login-form {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 300px; /* largura do formulário */
        padding: 20px;
        background-color: #f8f9fa; /* cor de fundo do formulário */
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* sombra */
    }

        /* Estilo para inputs e botões */
        .login-form input[type="text"],
        .login-form input[type="password"] {
            width: 100%; /* largura dos campos de entrada */
            margin-bottom: 10px; /* espaço entre os elementos */
            padding: 10px; /* preenchimento interno */
            font-size: 16px; /* tamanho da fonte */
            border: 1px solid #ccc; /* borda */
            border-radius: 5px;
            box-sizing: border-box; /* incluir preenchimento e borda na largura total */
            font-family: Arial, sans-serif; /* definir a fonte */
        }

        .login-form button {
            width: 100%; /* largura do botão */
            margin-bottom: 10px; /* espaço entre os elementos */
            padding: 10px; /* preenchimento interno */
            font-size: 16px; /* tamanho da fonte */
            border: none; /* remover a borda */
            border-radius: 5px;
            background-color: #007bff; /* cor de fundo do botão */
            color: #fff; /* cor do texto do botão */
            cursor: pointer;
            font-family: Arial, sans-serif; /* definir a fonte */
        }

            .login-form button:hover {
                background-color: #0056b3; /* cor de fundo ao passar o mouse */
            }

        /* Estilo para o link de registro */
        .login-form a.btn-secondary {
            display: inline-block;
            width: 93%; /* largura do link de registro */
            text-align: center;
            text-decoration: none;
            color: #007bff;
            background-color: transparent;
            border: 1px solid #007bff;
            border-radius: 5px;
            padding: 10px;
            font-family: Arial, sans-serif; /* definir a fonte */
        }

            .login-form a.btn-secondary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
                color: #fff;
            }
</style>
