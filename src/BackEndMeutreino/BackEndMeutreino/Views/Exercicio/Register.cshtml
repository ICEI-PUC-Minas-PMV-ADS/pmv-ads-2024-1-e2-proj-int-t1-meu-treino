@model BackEndMeutreino.Models.Exercicio

@{
    ViewBag.Title = "Register";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Estilo para centralizar o formulário */
    .login-form {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 300px; /* largura do formulário */
        padding: 20px;
        background-color: #f8f9fa; /* cor de fundo do formulário */
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* sombra */
    }

        /* Estilo para inputs e botões */
        .login-form input[type="text"],
        .login-form input[type="password"] {
            width: 100%; /* largura dos campos de entrada */
            margin-bottom: 10px; /* espaço entre os elementos */
            padding: 10px; /* preenchimento interno */
            font-size: 16px; /* tamanho da fonte */
            border: 1px solid #ccc; /* borda */
            border-radius: 5px;
            box-sizing: border-box; /* incluir preenchimento e borda na largura total */
            font-family: Arial, sans-serif; /* definir a fonte */
        }

        .login-form button {
            width: 100%; /* largura do botão */
            margin-bottom: 10px; /* espaço entre os elementos */
            padding: 10px; /* preenchimento interno */
            font-size: 16px; /* tamanho da fonte */
            border: none; /* remover a borda */
            border-radius: 5px;
            background-color: #007bff; /* cor de fundo do botão */
            color: #fff; /* cor do texto do botão */
            cursor: pointer;
            font-family: Arial, sans-serif; /* definir a fonte */
        }

            .login-form button:hover {
                background-color: #0056b3; /* cor de fundo ao passar o mouse */
            }

        /* Estilo para o link de registro */
        .login-form a.btn-secondary {
            display: inline-block;
            width: calc(50% - 5px); /* largura do link de registro */
            text-align: center;
            text-decoration: none;
            color: #007bff;
            background-color: transparent;
            border: 1px solid #007bff;
            border-radius: 5px;
            padding: 10px;
            margin-top: 10px;
            font-family: Arial, sans-serif; /* definir a fonte */
        }

            .login-form a.btn-secondary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
                color: #fff;
            }
</style>

<div class="login-form">
    @using (Html.BeginForm("AddExercise", "Exercicio", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.nome, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dificuldade, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.dificuldade, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.dificuldade, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.descricao, htmlAttributes: new { @class = "control-label" })
            @Html.PasswordFor(model => model.descricao, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.descricao, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.grupoMuscular, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.grupoMuscular, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.grupoMuscular, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.imagem, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.imagem, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.imagem, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
    }
</div>
<script src="/_framework/aspnetcore-browser-refresh.js"></script>
