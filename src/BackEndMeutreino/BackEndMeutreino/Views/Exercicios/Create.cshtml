@using static BackEndMeutreino.Models.Exercicio
@model BackEndMeutreino.Models.Exercicio

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center display-4">Cadastrar novo Exercício</h1>


<div class="form-group">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="imagem" class="control-label">Imagem</label>
                <input class="form-control" placeholder="Adicione a imagem do Exercício" type="text" data-val="true" data-val-required="The nome field is required." id="descricao" name="descricao" value="">
                <span asp-validation-for="imagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nome" class="control-label">Nome</label>
                <input class="form-control" placeholder="Digite o nome do Exercício" type="text" data-val="true" data-val-required="The nome field is required." id="nome" name="nome" value="">
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descricao" class="control-label">Descrição</label>
                <input class="form-control" placeholder="Digite a descrição do Exercício" type="text" data-val="true" data-val-required="The nome field is required." id="descricao" name="descricao" value="">
                <span asp-validation-for="descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="grupoMuscular" class="control-label">Grupo Muscular</label>
                <input class="form-control" placeholder="Digite o Grupo Muscular" type="text" data-val="true" data-val-required="The nome field is required." id="grupoMuscular" name="grupoMuscular" value="">
                <span asp-validation-for="grupoMuscular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dificuldade" class="control-label">Dificuldade do Exercício</label>
                <select asp-for="dificuldade" class="form-control"asp-items="Html.GetEnumSelectList<Dificuldade>()" ></select>
                <span asp-validation-for="dificuldade" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">


                <input type="submit" value="Adicionar" class="btn btn-primary" />
                 <a asp-action="Index" class="btn btn-secondary" >Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
